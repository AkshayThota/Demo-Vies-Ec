<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background and text colors. -->
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
        <item name="spinnerStyle">@style/SpinnerTheme</item>
    </style>

    <!-- Button theme. -->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- EditText theme. -->
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Spinner theme. -->
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/spinnerBackground</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
